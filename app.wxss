/**app.wxss**/

view {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  flex-direction: column;
}

.h3 {
  font-size: 16px;
}

.note {
  color: #999;
  font-size: 14px;
  font-weight: normal;
}

.title {
  padding: 10px;
  padding-bottom: 20px;
  flex-direction: row;
  flex: 1;
  width: 100%;
  font-weight: bold;
  font-size: 22px;
}

.act-more {
  color: #666;
  text-align: right;
}
